alias g=grep
alias c=cat
alias x=xargs
alias b='arc browse'

alias clean='mvn clean -qq'

alias less='less -R'
alias json='python -m json.tool'

alias cc='pygmentize -f256 -Ostyle=vs -g'
function show() {
  set-title $1
  cc $* | less -N
}
declare -f _pygmentize > /dev/null &&
  complete -o default -F _pygmentize cc show

alias scp='scp -C'

alias ..='cd ..'
alias cd..='cd ..'

alias br='git br'
alias st='git st'
function f() { git fetch -q $* && git br; }
alias fr='f && git rebase'
alias l='git l'

alias gg='git grep -In'
function gge() { git grep -n "$@" | grep -o '^[^:]\{1,\}:[0-9]*' | xargs e; }
alias gf='git ls-files'
alias gfc='git ls-files | xargs ls -d1 --color'
alias gfg='git ls-files | grep'
function gfge() { git ls-files | grep "$@" | xargs e; }
alias blame='tig blame'

if declare -f __git_complete >/dev/null
then
  __git_complete br _git_branch
  __git_complete f _git_fetch
  __git_complete gg _git_grep
fi

function highlight() {
  egrep --color "$*|"
}
alias h=highlight

function gen_passwd() {
  tr -dc _A-Za-z0-9 < /dev/urandom | head -c${1:-10} | xargs
}

function m() {
  if [ -x ./make.sh ]
  then
    ./make.sh $@
  elif [ -e build.gradle ]
  then
    gradle $@
  else
    make $@
  fi
}
if [ -f /usr/share/bash-completion/completions/make ]
then
  . /usr/share/bash-completion/completions/make
  complete -F _make m
fi

function set-title() {
  echo -ne "\e]2;$@\007"
}
function google() {
  $BROWSER https://www.google.com/search?q=$(python -c "import urllib; print urllib.quote('$*')")
}
