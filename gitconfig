[alias]
  st = status
  br = branch -vv
  co = checkout
  ci = commit
  unstash = stash pop
  r = rebase master
  g = grep

  l = log --oneline --first-parent origin/HEAD~2..
  ll = log --oneline -3
  llog = log --oneline
  files = log --name-status --oneline origin/master..
  filesdiff = diff --name-only origin/master

[log]
  decorate = short

[color]
	ui = auto

[color "branch"]
  current = red
  local = bold
  remote = green

[color "diff"]
  meta = blue
[diff]
  noprefix

[push]
  default = upstream


[tig]
  main-view-date = relative
  blame-view-date = relative
  line-graphics = utf-8
  main-view-author = width=7
  blame-view-author = width=7
