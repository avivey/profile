[alias]
  st = status
  br = branch -vv
  co = checkout
  ci = commit
  unstash = stash pop
  r = rebase master
  g = grep

  l = log --oneline --first-parent origin/master~2..
  ll = log --oneline -3
  llog = log --oneline
  files = log --name-status --oneline origin/master..

[log]
  decorate = short

[color]
	ui = auto

[color "branch"]
  current = red
  local = bold
  remote = green

[color "diff"]
  meta = blue

[tig]
  show-date = relative
  author-width = 7
  line-graphics = utf-8

[diff]
  noprefix

[push]
  default = upstream
