[alias]
  st = status
  br = branch -v
  co = checkout
  ci = commit
  unstash = stash pop
  r = rebase master
  g = grep

  l = log --oneline --first-parent master~2..
  ll = log --oneline -3
  llog = log --oneline
  files = log --name-status --oneline master..

[log]
  decorate = short

[color]
	ui = auto

[color "branch"]
  current = red
  local = bold
  remote = green

[tig]
  show-date = relative
  author-width = 7
  line-graphics = utf-8


[push]
  default = upstream
